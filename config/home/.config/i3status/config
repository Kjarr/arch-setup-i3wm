general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless _first_ {
        format_up = "☻"
        format_down = "☻"
}

volume master {
        format = "♪ %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "%status %percentage"
}

tztime local {
        format = "%d-%m-%Y %H:%M"
}
